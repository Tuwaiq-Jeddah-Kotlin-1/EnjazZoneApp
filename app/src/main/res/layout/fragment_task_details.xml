<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:windowSoftInputMode="adjustResize|stateAlwaysHidden|adjustPan"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvDialogFragmentHeaderTitleTV"
                android:text="Task # In Details:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                />

        <androidx.cardview.widget.CardView
                android:id="@+id/cvTaskHeaderCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="14dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="true"
                app:layout_constraintTop_toBottomOf="@+id/tvDialogFragmentHeaderTitleTV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/cvPickDueDateCV"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTaskHeaderCL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/tvCreationDateTV"
                        android:text="Creation Date: "
                        android:textSize="12.5sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/etTaskTitleET"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="20dp" />


                <TextView
                        android:id="@+id/tvTaskTitleHeaderTV"
                        android:text="Task Title"
                        android:textColor="@color/primary_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@+id/etTaskTitleET"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="280dp"
                        app:layout_constraintEnd_toEndOf="parent" />

                <EditText
                        android:id="@+id/etTaskTitleET"
                        android:text="Task Title"
                        android:textSize="22.5sp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="4"
                        android:isScrollContainer="true"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="55dp"
                        app:layout_constraintTop_toTopOf="parent" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/lighter_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etTaskTitleET"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp" />

                <TextView
                        android:id="@+id/tvTaskDescriptionHeaderTV"
                        android:text="Description"
                        android:textColor="@color/primary_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toTopOf="@+id/etTaskDescriptionET" />

                <EditText
                        android:id="@+id/etTaskDescriptionET"
                        android:text="Description and notes are written here.."
                        android:textSize="15sp"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="7"
                        android:overScrollMode="always"
                        android:scrollbarStyle="insideInset"
                        android:scrollbars="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/etTaskTitleET"
                        android:layout_marginTop="50dp" />

                <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_gray"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etTaskDescriptionET"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:id="@+id/view" />

                <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcvSaveChangesMCV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:strokeColor="@color/primary_blue"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="14dp"
                        app:strokeWidth="0.1dp"
                        android:elevation="1dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/view"
                        android:layout_marginTop="75dp">

                    <TextView
                            android:id="@+id/tvSaveChangesTV"
                            android:text="Save Changes"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

<!--        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/primary_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvTaskHeaderCV"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp" />-->


        <androidx.cardview.widget.CardView
                android:id="@+id/cvPickDueDateCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="12dp"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="14dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvTaskHeaderCV"
                android:layout_marginTop="30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icons8_edit_property_64"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/imageView"
                        app:flow_horizontalAlign="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="15dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Due Date"
                        android:textColor="@color/primary_blue"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/imageView"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0.102"
                        android:id="@+id/textView3" />

                <TextView
                        android:id="@+id/tvTaskDueDateTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 July 1993"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="5dp"
                        app:layout_constraintStart_toEndOf="@id/imageView"
                        android:layout_marginTop="5dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cvStartingHourCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="12dp"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="14dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/cvPickDueDateCV"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toStartOf="@+id/cvEndingHourCV">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/ivStartHour"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sand_hour_green"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:flow_horizontalAlign="center"
                        app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                        android:id="@+id/tvStarterHourHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Starting Hour"
                        android:textColor="@color/green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivStartHour"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0.102"
                        android:layout_marginEnd="5dp" />

                <TextView
                        android:id="@+id/tvTaskStartingHourTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7:00 am"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivStartHour"
                        android:layout_marginTop="5dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvStarterHourHeader"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cvEndingHourCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="12dp"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="14dp"
                app:cardBackgroundColor="@color/white"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvPickDueDateCV"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toEndOf="@+id/cvStartingHourCV">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/ivEndHour"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/sand_hour_red"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:flow_horizontalAlign="center"
                        app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                        android:id="@+id/tvEndingHourHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Ending Hour"
                        android:textColor="@color/dark_red"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivEndHour"
                        android:layout_marginTop="10dp"
                        app:layout_constraintHorizontal_bias="0.102"
                        android:layout_marginEnd="5dp" />

                <TextView
                        android:id="@+id/tvTaskEndingHourTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8:00 am"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivEndHour"
                        android:layout_marginTop="5dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvEndingHourHeader"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="15dp"
                        app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

<!--        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bright_red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/mcvDeleteTaskMCV"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp" />-->

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvDeleteTaskMCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="12dp"
                app:cardCornerRadius="20dp"
                app:cardMaxElevation="14dp"

                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvStartingHourCV"
                android:layout_marginTop="75dp"
                app:strokeColor="@color/bright_red"
                app:strokeWidth="0.1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">


            <Button
                    android:id="@+id/btnDeleteBTN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Delete Task"
                    android:textColor="@color/bright_red"
                    android:drawableEnd="@drawable/ic_icons_delete_32"
                    android:backgroundTint="@color/white"
                    android:clickable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />


        </com.google.android.material.card.MaterialCardView>

<!--        <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/bright_red"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mcvDeleteTaskMCV"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>