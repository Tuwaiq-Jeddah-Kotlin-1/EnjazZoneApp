<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
            android:id="@+id/expandIB"
            android:layout_width="40dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/baseline_expand_more_24"
            android:translationZ="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary_blue" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editCL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0"
            android:layout_marginEnd="57dp"
            android:layout_marginTop="3.5dp"
            android:translationZ="90dp"
            android:visibility="gone">

        <ImageButton
                android:id="@+id/editIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:translationZ="90dp"

                app:layout_constraintEnd_toStartOf="@+id/deleteIB"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_icons_edit"
                android:backgroundTint="@color/white" />

        <ImageButton
                android:id="@+id/deleteIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="@+id/editInDetailsIB"
                app:layout_constraintTop_toTopOf="parent"
                android:translationZ="90dp"
                app:srcCompat="@drawable/ic_icons_delete_32"
                android:backgroundTint="@color/white" />

        <ImageButton
                android:id="@+id/editCheckIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="@+id/cancelIB"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_check_circle_24"

                app:tint="@color/primary_blue" />

        <ImageButton
                android:id="@+id/cancelIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_cancel_24"

                app:tint="@color/primary_blue" />

        <ImageButton
                android:id="@+id/editInDetailsIB"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_icons8_edit_property_24_png"
                android:backgroundTint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/taskCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="12dp"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="14dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clTaskTitleCL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="14.5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <TextView
                        android:id="@+id/tvTaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="20sp"
                        android:textStyle=""
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:textColor="@color/black"
                        app:layout_constraintVertical_bias="0.0" />

                <EditText
                        android:id="@+id/etTodoRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="6"
                        android:hint="Edit Task Row"
                        android:background="@null"
                        android:visibility="invisible"
                        android:isScrollContainer="true"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="20sp"
                        android:textStyle=""
                        android:textColor="@color/black"
                        app:layout_constraintVertical_bias="0.0" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>